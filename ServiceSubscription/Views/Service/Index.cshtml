@model ServiceSubscription.Models.Service


@{
    ViewBag.Title = "Service";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Service</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <h4>Get your offer</h4>
    <hr />
    <div class="form-group">
        @Html.LabelFor(m => m.Countries, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.ValidationMessageFor(m => m.Countries)
            @Html.DropDownListFor(x => Model.SelectedCountry, Model.Countries, htmlAttributes: new { @class = "form-control", id = "Country" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Recurrences, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.ValidationMessageFor(m => m.Recurrences)
            @Html.DropDownListFor(x => Model.SelectedRecurrence, Model.Recurrences, htmlAttributes: new { @class = "form-control", id = "Reccurence" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Send" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            @Html.LabelFor(m => m.RecommendedPackageName, Model.RecommendedPackageName, new { @class = "form-control" })
            @Html.LabelFor(m => m.RecommendedPackagePrice, Model.RecommendedPackagePrice, new { @class = "form-control" })
        </div>
    </div>
}

